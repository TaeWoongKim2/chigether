{
  "plugins": ["stylelint-prettier"],
  "extends": ["stylelint-config-standard", "stylelint-config-recommended"],
  "rules": {
    "at-rule-no-unknown": [
      true,
      {
        "ignoreAtRules": ["extends", "ignores"]
      }
    ],
    "indentation": 2,
    "block-closing-brace-newline-after": "always"
  }
}
